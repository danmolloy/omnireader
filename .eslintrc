{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "extends": [
    "plugin:import/errors",
    "plugin:import/warnings",
    "airbnb",
    "plugin:jest/all",
    "prettier"
  ],
  "rules": {
    "jest/prefer-expect-assertions": "off",
    "jest/no-identical-title": "off",
    "jest/lowercase-name": "off"
  },
  "globals": {
    "context": "readonly",
    "gql": "readonly",
    "query": "readonly",
    "mutate": "readonly"
  },
  "env": {
    "node": true,
    "jest/globals": true
  }
}
